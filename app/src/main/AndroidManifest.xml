<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ipvc.estg.findme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_findme"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_findme_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AnuncioActivity" />
        <activity android:name=".DetalhePost" />
        <activity android:name=".MenuTesteActivity" />
        <activity android:name=".InserirAparecimento" />
        <activity android:name=".InserirDesaparecimento" />
        <activity android:name=".messages.LatestMessagesActivity" />
        <activity android:name=".login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".messages.ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messages.LatestMessagesActivity" />
        </activity>
        <activity android:name=".NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messages.LatestMessagesActivity" />
        </activity>
    </application>

</manifest>